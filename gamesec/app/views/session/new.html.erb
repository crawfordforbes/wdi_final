<h1>Welcome to Game Secretary</h2>

<h3>Log in here:</h3>
<% if @error %>
	<p style='color: red;'>Incorrect email/password</p>
<% end %>

<%= form_tag("/session", method: "POST") do %>
  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag(:name) %>
  <%= label_tag(:password, "Password:") %>
  <%= text_field_tag(:password) %>
  <%= submit_tag("Log in") %>
<% end %>

</br>
<h3>Or create an account:</h3>

<%= form_tag("/user", method: "POST") do %>
  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag(:name) %>
    <%= label_tag(:email, "Email:") %>
  <%= text_field_tag(:email) %>
  <%= label_tag(:password, "Password:") %>
  <%= text_field_tag(:password) %>
  <%= submit_tag("Sign up") %>
<% end %>

